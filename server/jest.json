{
  "globals": {
    "ts-jest": {
      "diagnostics": {
        "warnOnly": true
      }
    }
  },

  "preset": "ts-jest",
  "testMatch": ["**/*.{test,spec}.{js,jsx,ts,tsx}"],
  "roots": ["<rootDir>/src/"],

  "clearMocks": true,

  "collectCoverageFrom": ["<rootDir>/src/**/*.{ts,tsx,js,jsx}"],
  "coverageReporters": ["text", "lcov"],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "testEnvironment": "node"
}
